# http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
quote_type = 'single'
max_line_length = 100
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = tab
max_line_length = 220

[pom.xml]
indent_size = 2
indent_style = tab
max_line_length = 180

[*.{markdown, mdown, mkdn, mkd, md}]
trim_trailing_whitespace = false
indent_size = 2
